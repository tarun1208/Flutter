import 'package:flutter/material.dart';

void main() => runApp(MyApp());

class MyApp extends StatelessWidget {
  @override
  Widget build(BuildContext context) {
    return MaterialApp(
      debugShowCheckedModeBanner: false,
      title: 'Responsive UI',
      home: HomeScreen(),
    );
  }
}

class HomeScreen extends StatefulWidget {
  @override
  State<HomeScreen> createState() => _HomeScreenState();
}

class _HomeScreenState extends State<HomeScreen> {
  String selected = "Home";

  final pages = {
    "Home": "Welcome to the Home Page!",
    "About": "This is the About Page.",
    "Services": "Our Services are listed here.",
    "Contact": "Contact us at example@flutter.dev",
    "Feedback": "Give us your Feedback!",
  };

  @override
  Widget build(BuildContext context) {
    final isSmall = MediaQuery.of(context).size.width < 600;

    return Scaffold(
      appBar: AppBar(
        title: const Text("Design", style: TextStyle(fontSize: 30)),
        backgroundColor: Colors.green[800],
        actions: isSmall
            ? [
                PopupMenuButton<String>(
                  onSelected: (page) => setState(() => selected = page),
                  itemBuilder: (context) => pages.keys
                      .map((title) => PopupMenuItem(
                            value: title,
                            child: Text(title),
                          ))
                      .toList(),
                )
              ]
            : pages.keys
                .map((title) => TextButton(
                      onPressed: () => setState(() => selected = title),
                      child: Text(
                        title,
                        style: TextStyle(
                          color: selected == title ? Colors.white : Colors.white70,
                          fontWeight: selected == title
                              ? FontWeight.bold
                              : FontWeight.normal,
                        ),
                      ),
                    ))
                .toList(),
      ),

      body: Container(
        decoration: const BoxDecoration(
          image: DecorationImage(
            image: AssetImage("assets/images/bg.jpg"),
            fit: BoxFit.cover,
          ),
        ),
        child: Center(
          child: Container(
            padding: const EdgeInsets.all(20),
            width: isSmall ? double.infinity : MediaQuery.of(context).size.width * 0.7,
            // ignore: deprecated_member_use
            color: Colors.white.withOpacity(0.85),
            child: Text(
              pages[selected]!,
              textAlign: TextAlign.center,
              style: const TextStyle(fontSize: 24),
            ),
          ),
        ),
      ),
    );
  }
}
